
@model IEnumerable<Resturant.web.Models.ProductDto>
<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h2 class="text-primary">Products List</h2>

        </div>
        <div class="col text-end pt-1">
            <a asp-action="productCreate" class="btn btn-outline-primary"> Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
           
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a class="btn btn-success" asp-action="productEdit" asp-route-ProductId="@item.ProductId"> Edit</a>
                        <a class="btn btn-danger" asp-action="productRemove" asp-route-ProductId="@item.ProductId"> Remove</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>